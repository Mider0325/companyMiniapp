/* Êï¥‰ΩìÂÆπÂô® */
.container {
  padding: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background-color: #f8f8f8;
}

/* Âä†ËΩΩÁä∂ÊÄÅ */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  width: 100%;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* ËΩÆÊí≠Âõæ */
.banner {
  width: 100%;
  height: 400rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* ÈÄöÁî®sectionÊ†∑Âºè */
.section {
  margin: 30rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #4CAF50;
  padding-left: 20rpx;
}

/* ÂÖ¨Âè∏ÁÆÄ‰ªã */
.intro-content {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
}

.intro-text {
  display: inline;
}

.highlight-text {
  color: #4CAF50;
  font-weight: bold;
  padding: 2rpx 0;
  border-bottom: 2rpx solid #4CAF50;
}

.badge {
  display: inline;
  background-color: rgba(76, 175, 80, 0.15);
  color: #4CAF50;
  padding: 0 6rpx;
  border-radius: 4rpx;
  font-weight: bold;
  font-size: 28rpx;
}

.billion-badge {
  display: inline;
  background-color: rgba(255, 152, 0, 0.15);
  color: #FF9800;
  padding: 0 6rpx;
  border-radius: 4rpx;
  font-weight: bold;
  font-size: 28rpx;
}

.more-btn {
  text-align: center;
  margin-top: 20rpx;
  background-color: #4CAF50;
  color: white;
  padding: 15rpx 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  width: 200rpx;
}

/* ‰∫ßÂìÅÂ±ïÁ§∫ */
.product-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx 4%;
}

.product-item {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  margin-bottom: 0;
}

.product-image {
  width: 100%;
  aspect-ratio: 16 / 9;
  /* ÂÖºÂÆπÊÄßÂ§ÑÁêÜÔºöÂ¶ÇÊûú‰∏çÊîØÊåÅaspect-ratioÔºåÂèØÁî®‰∏ãÊñπÊ≥®ÈáäÊñπÊ°à */
  /* height: 0; padding-top: 56.25%; position: relative; */
  border-radius: 16rpx 16rpx 0 0;
  object-fit: cover;
  display: block;
  height: 220px;
}

.product-info {
  padding: 18rpx 15rpx 15rpx 15rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.product-desc {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  line-height: 1.4;
}

/* ‰ºòÂäøÂ±ïÁ§∫ */
.advantages {
  margin-bottom: 40rpx;
}

.advantage-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx; /* ‰ΩøÁî®Ë¥üËæπË∑ùÂàõÂª∫Êõ¥ÂùáÂåÄÁöÑÈó¥Ë∑ù */
}

.advantage-item {
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
}

.advantage-inner {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  text-align: center;
  padding: 20rpx;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.advantage-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
}

.advantage-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #4CAF50;
}

.advantage-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  width: 100%;
}

/* ËÅîÁ≥ªÊàë‰ª¨ */
.contact-info {
  font-size: 28rpx;
  line-height: 1.6;
}

.contact-item {
  margin-bottom: 15rpx;
}

.contact-label {
  color: #666;
}

.contact-value {
  color: #333;
  font-weight: bold;
}

.contact-icon {
  font-size: 32rpx;
  margin-left: 18rpx;
  color: #4CAF50;
  cursor: pointer;
  vertical-align: middle;
  transition: color 0.2s;
}
.contact-icon:active {
  color: #2196f3;
}

/* È°µËÑö */
.footer {
  padding: 30rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  background-color: #f3f3f3;
}

.honor-list {
  margin-top: 18rpx;
  display: flex;
  flex-direction: column;
  gap: 18rpx;
  background: #f6faf7;
  border-radius: 12rpx;
  padding: 18rpx 0rpx;
  box-shadow: 0 2rpx 8rpx rgba(76,175,80,0.04);
}

.honor-badge {
  display: flex;
  align-items: flex-start;
  background: none;
  color: #388e3c;
  font-size: 26rpx;
  font-weight: 500;
  line-height: 1.7;
  margin: 0;
  padding: 0;
  padding-left: 16rpx;
  border-radius: 0 8rpx 8rpx 0;
  box-shadow: none;
  letter-spacing: 1rpx;
  min-height: 40rpx;
}

.honor-badge::before {
  content: "üèÜ";
  margin-right: 10rpx;
  font-size: 26rpx;
  line-height: 1.7;
}

.intro-honor-row {
  display: flex;
  flex-direction: row;
  gap: 32rpx;
  justify-content: space-between;
}

.intro-col {
  flex: 1.2;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.honor-col {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

@media screen and (max-width: 750px) {
  .intro-honor-row {
    flex-direction: column;
    gap: 0;
  }
  .intro-col, .honor-col {
    width: 100%;
    margin-bottom: 20rpx;
  }
}

.origin-display {
  margin-top: 30rpx;
}
.origin-list {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}
.origin-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx 18rpx 18rpx 18rpx;
  box-shadow: 0 2rpx 8rpx rgba(76,175,80,0.06);
  margin-bottom: 0;
}
.origin-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #219653;
  margin-bottom: 10rpx;
  letter-spacing: 1rpx;
}
.origin-advantage {
  font-size: 25rpx;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 2.1;
}
.origin-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
  color: #4CAF50;
  flex-shrink: 0;
}
.origin-highlight {
  color: #2196f3;
  font-weight: bold;
  margin-right: 4rpx;
}
.origin-label {
  color: #2196f3;
  font-weight: bold;
  margin-right: 6rpx;
  font-size: 25rpx;
  letter-spacing: 1rpx;
}
.origin-key {
  color: #388e3c;
  font-weight: bold;
  background: none;
  padding: 0;
  margin: 0 2rpx;
  display: inline;
}

.intro-logo-row {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 10rpx;
}
.intro-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.company-detail {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
}
.company-logo {
  width: 200rpx;
  height: 200rpx;
  margin-right: 2rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.company-logo my-image,
.company-logo image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  background: #fff;
  object-fit: contain;
}
.company-info {
  flex: 1;
}
.company-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.company-found {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}
.company-desc {
  font-size: 28rpx;
  line-height: 1.7;
  color: #333;
} 