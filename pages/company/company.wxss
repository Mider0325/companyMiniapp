/* 整体容器 */
.container {
  padding: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background-color: #f8f8f8;
}

/* 通用section样式 */
.section {
  margin: 30rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #4CAF50;
  padding-left: 20rpx;
}

/* 公司介绍 */
.company-detail {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.company-logo {
  width: 400rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.company-logo image {
  width: 100%;
  height: 100%;
}

.company-info {
  width: 100%;
}

.company-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 10rpx;
}

.company-found {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  margin-bottom: 20rpx;
}

.company-desc {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  text-align: justify;
}

/* 工厂展示 */
.factory-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.factory-images {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.factory-image {
  width: 48%;
  height: 300rpx;
  margin-bottom: 15rpx;
  border-radius: 8rpx;
}

/* 优势 */
.advantages {
  margin-bottom: 40rpx;
}

.advantage-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 20rpx;
}

.advantage-item {
  width: calc(50% - 10rpx);
  padding: 30rpx 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  text-align: center;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.advantage-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
}

.advantage-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #4CAF50;
}

.advantage-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  width: 100%;
}

/* 认证 */
.certifications {
  margin-bottom: 40rpx;
}

.cert-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 20rpx;
}

.cert-item {
  width: calc(50% - 10rpx);
  padding: 30rpx 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  text-align: center;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.cert-name {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #4CAF50;
}

.cert-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  width: 100%;
}

.cert-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
}

/* 联系我们 */
.contact-list {
  margin-top: 10rpx;
}

.contact-item {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.contact-label {
  color: #666;
  width: 150rpx;
  flex-shrink: 0;
}

.contact-value {
  color: #333;
  font-weight: 500;
}

/* 页脚 */
.footer {
  padding: 30rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  background-color: #f3f3f3;
} 