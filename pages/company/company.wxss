/* 整体容器 */
.container {
  padding: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background-color: #f8f8f8;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  width: 100%;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 通用section样式 */
.section {
  margin: 30rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #4CAF50;
  padding-left: 20rpx;
}

/* 公司介绍 */
.company-detail {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.company-logo {
  width: 400rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.company-logo image {
  width: 100%;
  height: 100%;
}

.company-info {
  width: 100%;
}

.company-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 10rpx;
}

.company-found {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  margin-bottom: 20rpx;
}

.company-desc {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  text-align: justify;
}

/* 工厂展示 */
.factory-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.factory-swiper-wrapper {
  position: relative;
  width: 100%;
  padding-top: 75%; /* 4:3 比例 */
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
  box-sizing: border-box;
}

.factory-swiper {
  position: absolute;
  left: 0; top: 0; right: 0; bottom: 0;
  width: 100%;
  height: 100%;
}

.factory-image {
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 0;
}

@media screen and (max-width: 600px) {
  .factory-swiper-wrapper {
    margin-left: -20rpx;
    margin-right: -20rpx;
    width: calc(100% + 40rpx);
  }
}

/* 优势 */
.advantages {
  margin-bottom: 40rpx;
}

.advantage-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx; /* 使用负边距创建更均匀的间距 */
}

.advantage-item {
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
}

.advantage-item view {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  text-align: center;
  padding: 20rpx;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.advantage-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
}

.advantage-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #4CAF50;
}

.advantage-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  width: 100%;
}

/* 认证 */
.certifications {
  margin-bottom: 40rpx;
}

.cert-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx; /* 使用负边距创建更均匀的间距 */
}

.cert-item {
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
}

.cert-item view {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  text-align: center;
  padding: 20rpx;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.cert-name {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #4CAF50;
}

.cert-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  width: 100%;
}

.cert-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
}

/* 联系我们 */
.contact-list {
  margin-top: 10rpx;
}

.contact-item {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.contact-label {
  color: #666;
  width: 150rpx;
  flex-shrink: 0;
}

.contact-value {
  color: #333;
  font-weight: 500;
}

/* 页脚 */
.footer {
  padding: 30rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  background-color: #f3f3f3;
}

.factory-intro-block {
  display: flex;
  flex-wrap: wrap;
  gap: 40rpx;
  justify-content: space-between;
}
.factory-origin {
  flex: 1 1 420rpx;
  min-width: 320rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  padding: 28rpx 24rpx 24rpx 24rpx;
  margin-bottom: 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  margin-right: 0;
}
.factory-origin-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #ff9800;
  margin-bottom: 18rpx;
  letter-spacing: 1rpx;
}
.factory-origin-adv {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
}
.origin-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
  color: #e53935;
  flex-shrink: 0;
  line-height: 1.2;
}
.origin-adv-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #00b386;
  margin-right: 8rpx;
}
.origin-adv-desc {
  font-size: 26rpx;
  color: #333;
  line-height: 1.7;
  word-break: break-all;
}
.origin-key {
  display: inline-block;
  background: linear-gradient(90deg, #ffe082 60%, #ffd54f 100%);
  color: #d84315;
  font-weight: bold;
  padding: 0 8rpx;
  border-radius: 6rpx;
  margin: 0 2rpx;
  font-size: 26rpx;
  box-decoration-break: clone;
}
@media screen and (max-width: 700px) {
  .factory-intro-block {
    flex-direction: column;
    gap: 24rpx;
  }
  .factory-origin {
    min-width: 0;
    width: 100%;
  }
} 