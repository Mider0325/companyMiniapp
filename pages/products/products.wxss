/* 整体容器 */
.container {
  padding: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background-color: #f8f8f8;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 标签栏 */
.tabs-container {
  white-space: nowrap;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  padding: 0 20rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tabs {
  display: inline-flex;
  padding: 20rpx 0;
}

.tab {
  padding: 16rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  margin-right: 10rpx;
}

.tab.active {
  color: #4CAF50;
  font-weight: bold;
}

.tab.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 6rpx;
  background-color: #4CAF50;
  border-radius: 3rpx;
}

/* 产品列表 */
.products-container {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.products-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.product-card {
  width: 48%;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.product-image {
  width: 100%;
  height: 240px !important;
  display: block;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.product-brief {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 100rpx;
}

/* 产品详情弹窗 */
.product-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: opacity 0.3s;
}

.product-detail-modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  height: 85%;
  overflow: hidden;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.product-detail-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-body {
  height: calc(100% - 92rpx);
  padding-bottom: 50rpx;
}

/* 产品详情内容 */
.product-images {
  width: 100%;
  height: 500rpx;
}

.detail-image {
  width: 100%;
  height: 100%;
}

.detail-section {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.detail-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  background-color: #f5f5f5;
  color: #4CAF50;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.service-items {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.service-item {
  width: 48%;
  display: flex;
  align-items: center;
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.service-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.service-text {
  font-size: 26rpx;
  color: #333;
}

.contact-section {
  background-color: #f9f9f9;
  border-bottom: none;
}

.contact-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 20rpx;
  text-align: center;
}

.contact-info {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  line-height: 1.6;
}

.service-items-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-gap: 20rpx;
  margin-bottom: 10rpx;
} 