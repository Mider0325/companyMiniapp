/**app.wxss**/
page {
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: #333;
  background-color: #f8f8f8;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  padding-bottom: 30rpx;
}

/* 通用样式 */
.section {
  margin: 30rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #4CAF50;
  padding-left: 20rpx;
}

.footer {
  padding: 30rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  background-color: #f3f3f3;
  margin-top: auto;
}

/* 按钮样式 */
.btn {
  display: inline-block;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  text-align: center;
}

.btn-primary {
  background-color: #4CAF50;
  color: #fff;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #4CAF50;
  border: 1rpx solid #4CAF50;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  margin-bottom: 20rpx;
}

.card-image {
  width: 100%;
  height: 300rpx;
}

.card-content {
  padding: 20rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.card-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
} 